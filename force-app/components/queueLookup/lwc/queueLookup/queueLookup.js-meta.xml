<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>52.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Queue Lookup</masterLabel>
    <description>A custom component to select a Queue in a Screen Flow.</description>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="selectedRecordId" label="Selected Record Id" type="String" role="outputOnly" />
            <property name="availableForSObjectType" label="SObject Type" description="Filter the SObjectType that the queues are available for." type="String" role="inputOnly" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>